{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "ES2015",
      "DOM",
      "ESNext"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}